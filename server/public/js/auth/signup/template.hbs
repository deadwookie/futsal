<form class="form-horizontal" {{action "signup" on="submit"}}>
  {{#if errorMsg}}
    <div class="alert alert-danger" role="alert">
      <strong>Login Error!</strong> {{errorMsg}}
  {{/if}}

  <div class="form-group">
    <label for="" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-4">
      {{input value=email type="email" class="form-control" required="required"}}
    </div>
  </div>

  <div class="form-group">
    <label for="" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-4">
      {{input value=name type="text" class="form-control" required="required"}}
    </div>
  </div>

  <div class="form-group">
    <label for="" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-4">
      {{input value=password type="password" class="form-control" required="required"}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success" {{bind-attr disabled="isProcessing"}}>Sign Up</button>
    </div>
  </div>
</form>
