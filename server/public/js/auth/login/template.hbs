<form class="form-horizontal" {{action "login" on="submit"}}>
  {{#if errorMsg}}
    <div class="alert alert-danger" role="alert">
      <strong>Login Error!</strong> {{errorMsg}}
  {{/if}}

  <div class="form-group">
    <label for="" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-4">
      {{input value=email type="email" class="form-control" required="required" placeholder="Email"}}
    </div>
  </div>

  <div class="form-group">
    <label for="" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-4">
      {{input value=password type="password" class="form-control" required="required" placeholder="Password"}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <label>
        {{input checked=rememberMe type="checkbox"}} <small>Remember me</small>
      </label>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <button type="submit" class="btn btn-success" {{bind-attr disabled="isProcessing"}}>Login</button>
    </div>
  </div>
</form>
