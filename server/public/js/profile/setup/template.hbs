<form class="form-horizontal" {{action "updateProfile" on="submit"}}>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-2">
      <label>
        {{input checked=isApproved type="checkbox"}} Approved
      </label>
    </div>
  </div>

  <div class="form-group">
    <label for="" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-4">
      {{input value=email type="email" class="form-control" required="required" placeholder="" disabled="disabled"}}
    </div>
  </div>

  <div class="form-group">
    <label for="" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-4">
      {{input value=name type="text" class="form-control" required="required" placeholder="Name"}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="photo">Photo</label>
    <div class="col-sm-4">
      {{#view Ember.View contentBinding="photo"}}
        {{! @TODO: use view App.PlayerEditPhotoEditView instead}}
        {{player-photo-edit-view}}
        <br>
        {{player-photo-preview-view srcBinding="photo" width="100" height="100" showControls="auto"}}
      {{/view}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <button type="submit" class="btn btn-primary" {{bind-attr disabled="isProcessing"}}>Save</button>
    </div>
  </div>
</form>
