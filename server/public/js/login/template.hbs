<form class="form-horizontal" {{action "login" on="submit"}}>
  <div class="form-group">
    <label for="" class="col-sm-2 control-label">Email</label>
    <div class="col-xs-4">
      {{input value=email type="email" class="form-control" required="required" placeholder="Email"}}
    </div>
  </div>

  <div class="form-group">
    <label for="" class="col-sm-2 control-label">Password</label>
    <div class="col-xs-4">
      {{input value=password type="password" class="form-control" required="required" placeholder="Password"}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <div class="checkboxDISABLED pull-left">
        <label>
          {{input checked=rememerMe type="checkbox"}} <small>Remember me</small>
        </label>
      </div>
      <div class="pull-right">
        {{#link-to "restore"}}<small>forgot password?</small>{{/link-to}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <button type="submit" class="btn btn-primary" {{bind-attr disabled="isProcessing"}}>Login</button>
      OR
      {{#link-to "signup" class=""}}Sign Up{{/link-to}}
    </div>
  </div>
</form>
