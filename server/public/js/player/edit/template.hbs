<div class="panel panel-default">
  <div class="panel-heading">Profile</div>
  <div class="panel-body">
    <form class="form-horizontal" {{action "updateProfile" on="submit"}}>
      <div class="form-group">
        <label for="" class="col-sm-2 control-label">Name</label>
        <div class="col-xs-4">
          {{input value=name type="text" class="form-control" required="required" placeholder="Username"}}
        </div>
      </div>

      <div class="form-group">
        <label for="" class="col-sm-2 control-label">Email</label>
        <div class="col-xs-4">
          {{input value=email type="email" class="form-control" required="required" placeholder="" disabled="disabled"}}
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label" for="photo">Photo</label>
        <div class="col-xs-4">
          <input id="photo" name="photo" class="input-file" type="file">
          <span class="help-block"><a href="https://github.com/chute/avatars-io-js">avatars.io</a></span>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
          <div>
            <label>
              {{input checked=isApproved type="checkbox"}} Approved
            </label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
          <button type="submit" class="btn btn-primary" {{bind-attr disabled="isProcessing"}}>Save</button>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">Change Password</div>
  <div class="panel-body">
    <form class="form-horizontal" {{action "changePassword" on="submit"}}>
      <div class="form-group">
        <label for="" class="col-sm-2 control-label">OLD Password</label>
        <div class="col-xs-4">
          {{input value=oldPassword type="password" class="form-control" required="required" placeholder="Old Password"}}
        </div>
      </div>

      <div class="form-group">
        <label for="" class="col-sm-2 control-label">NEW Password</label>
        <div class="col-xs-4">
          {{input value=newPassword type="password" class="form-control" required="required" placeholder="New Password"}}
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
          <button type="submit" class="btn btn-primary" {{bind-attr disabled="isProcessing"}}>Change</button>
        </div>
      </div>
    </form>
  </div>
</div>
