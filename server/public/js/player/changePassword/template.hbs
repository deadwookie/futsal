<div class="row">
  {{! @TODO: move/fix sidebar}}
  <div class="col-sm-3 col-md-2 sidebar">
    <div class="list-group">
        {{#link-to "player.edit" this class="list-group-item"}}
          <i class="fa fa-cog"></i> Edit
        {{/link-to}}
        {{#link-to "player.changePassword" class="list-group-item"}}
          <i class="fa fa-key"></i> Password
        {{/link-to}}
    </div>
  </div>

  <div class="col-sm-7 col-sm-offset1-3 col-md-10 col-md-offset1-2 main">
    <div class="panel panel-default">
      <div class="panel-heading">Change Password</div>
      <div class="panel-body">
        <form class="form-horizontal" {{action "changePassword" on="submit"}}>
          <div class="form-group">
            <label for="" class="col-sm-2 control-label">OLD Password</label>
            <div class="col-xs-4">
              {{input value=oldPassword type="password" class="form-control" required="required" placeholder="Old Password"}}
            </div>
          </div>

          <div class="form-group">
            <label for="" class="col-sm-2 control-label">NEW Password</label>
            <div class="col-xs-4">
              {{input value=newPassword type="password" class="form-control" required="required" placeholder="New Password"}}
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
              <button type="submit" class="btn btn-primary" {{bind-attr disabled="isProcessing"}}>Change</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
