<div class="well">
  <div class="row player-profile">
    <div class="col-sm-4 text-right">
      <h1>
        {{name}}
        <!--
          1..4 default
          4..6 info
          6..8 primary
          8..9 success
          9..10 warning
          10.. danger
         -->
        <span class="label label-primary">{{default ratingAvg "?"}}</span>
      </h1>
      {{#if ratings}}
        <dl class="dl-horizontal lead pull-right">
          <dt>Shoot</dt>
          <dd><span class="label label-info">{{toFixed ratings.sho 1}}</span></dd>
          <dt>Pass</dt>
          <dd><span class="label label-warning">{{toFixed ratings.pas 1}}</span></dd>
          <dt>Dribble</dt>
          <dd><span class="label label-default">{{toFixed ratings.dri 1}}</span></dd>
          <dt>Pace</dt>
          <dd><span class="label label-primary">{{toFixed ratings.pac 1}}</span></dd>
          <dt>Defence</dt>
          <dd><span class="label label-success">{{toFixed ratings.def 1}}</span></dd>
          <dt>Goal Keeper</dt>
          <dd><span class="label label-info">{{toFixed ratings.gk 1}}</span></dd>
        </dl>
      {{/if}}
      <p class="text-muted pull-right">
        <em>* Based on {{votesCount}} Votes</em>
        <br>
        {{#link-to "profile" this}}<i class="fa fa-cog"></i>{{/link-to}}
      </p>
    </div>
    <div class="col-sm-4">
      {{#if photo}}
        <img {{bind-attr src="photo"}} alt="photo" class="img-thumbnail img-responsive">
      {{else}}
        <img src="{{unbound gravatar}}?size=60px" alt="gravatar" class="img-thumbnail img-responsive">
      {{/if}}
    </div>
    <div class="col-sm-4">
      <br>
      <dl>
        <dt>Last played Tourney:</dt>
        <dd><a href="#"><i class="flaticon-football117"></i> July 04</a></dd>
        <dt>Tourneys won:</dt>
        <dd>3 of 7</dd>
        <dt>Matches won:</dt>
        <dd>21 of 42</dd>
        <dt>Goals scored:</dt>
        <dd>13</dd>
        <dt>Favorite teammate:</dt>
        <dd><a href="#">Dmitry B. <span class="label label-success">8.2</span></a></dd>
      </dl>
    </div>
  </div>
</div>
