<form class="form-horizontal" {{action "restore" on="submit"}}>
  <div class="form-group">
    <label for="" class="col-sm-2 control-label">Email</label>
    <div class="col-xs-4">
      {{input value=email type="email" class="form-control" required="required" placeholder="Email"}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <button type="submit" class="btn btn-primary" {{bind-attr disabled="isProcessing"}}>Restore</button>
      OR
      {{#link-to "login" class=""}}Login{{/link-to}}
    </div>
  </div>
</form>
